<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TiltToWin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/lightBackground</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/darkText</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="NoActionBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="DialogTheme">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/splash_background</item>
    </style>
    <style name="BaseTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MediumTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="MediumDarkTextView" parent="MediumTextView">
        <item name="android:textColor">@color/darkText</item>
    </style>
    <style name="xlargeTextView" parent="BaseTextView">
        <item name="android:textSize">@dimen/xlarge_text</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="XLargeDarkTextView" parent="xlargeTextView">
        <item name="android:textColor">@color/darkText</item>
    </style>
</resources>