<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="gameViewModel"
            type="com.hearxgroup.tilttowin.features.game.GameViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_padding"
        android:background="@color/lightBackground"
        tools:context=".features.game.GameActivity">

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:src="@{gameViewModel.roundEndIcon, default=@drawable/ic_victory}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tvMessage"
            style="@style/MediumDarkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="You won loren epsun ep sum oloeren"
            android:text="@{``+gameViewModel.roundEndMessage}"
            android:padding="@dimen/small_padding"
            app:layout_constraintTop_toBottomOf="@+id/imgIcon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tvNextRoundMessage"
            style="@style/MediumDarkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next round will begin in"
            android:layout_marginTop="@dimen/small_margin"
            android:padding="@dimen/small_padding"
            app:layout_constraintTop_toBottomOf="@+id/tvMessage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tvCountDown"
            style="@style/MediumLightTextView"
            android:background="@drawable/round_button_background"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:text="0"
            android:text="@{``+gameViewModel.countDown}"
            android:padding="@dimen/small_padding"
            android:layout_marginBottom="@dimen/medium_margin"
            app:layout_constraintTop_toBottomOf="@+id/tvNextRoundMessage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

