<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="gameViewModel"
            type="com.hearxgroup.tilttowin.features.game.GameViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".features.game.GameActivity"
        android:animateLayoutChanges="true"
        android:background="@color/lightBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTopBanner"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#eee">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/MediumDarkTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:padding="@dimen/small_margin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/tvScore"/>

            <TextView
                android:id="@+id/tvScore"
                style="@style/MediumDarkTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Score: 0/0"
                android:text="@{`Score: `+ gameViewModel.score +` / `+ gameViewModel.round }"
                android:padding="@dimen/small_margin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:visibility="invisible"
            android:id="@+id/tvCountDown"
            style="@style/XLargeDarkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0"
            android:text="@{``+ gameViewModel.countDownTime}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/imgDirection"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@{gameViewModel.arrow, default=@drawable/ic_def}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:visibility="invisible"
            android:id="@+id/tvTryAgain"
            style="@style/MediumDarkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wrong_direction_please_try_again"
            android:layout_marginTop="-40dp"
            app:layout_constraintTop_toBottomOf="@+id/imgDirection"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>











        <TextView
            android:id="@+id/tvisZ"
            style="@style/MediumDarkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="IsZ: false"
            android:layout_margin="@dimen/medium_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/tvisY"
            style="@style/MediumDarkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="IsY: false"
            android:textColor="@color/redArrow"
            android:layout_margin="@dimen/medium_margin"
            app:layout_constraintTop_toBottomOf="@+id/tvisZ"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/tvX"
            style="@style/MediumDarkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0"
            android:layout_margin="@dimen/medium_margin"
            app:layout_constraintBottom_toTopOf="@+id/tvY"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/tvY"
            style="@style/MediumDarkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0"
            android:textColor="@color/redArrow"
            android:layout_margin="@dimen/medium_margin"
            app:layout_constraintBottom_toTopOf="@+id/tvZ"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/tvZ"
            style="@style/MediumDarkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0"
            android:textColor="@color/greenArrow"
            android:layout_margin="@dimen/medium_margin"
            app:layout_constraintBottom_toTopOf="@+id/tvSensor"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/tvSensor"
            style="@style/MediumDarkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0"
            android:textColor="@color/redArrow"
            android:layout_margin="@dimen/medium_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/tvDir"
            style="@style/XLargeDarkTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="0"
            android:textColor="@color/greenArrow"
            android:layout_margin="@dimen/medium_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

