<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
    <variable
        name="gameViewModel"
        type="com.hearxgroup.tilttowin.features.game.GameViewModel"/>
</data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.game.GameActivity"
    android:animateLayoutChanges="true"
    android:background="@color/lightBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#eee">

        <TextView
            android:id="@+id/tvUserName"
            style="@style/MediumDarkTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Player A"
            android:textStyle="bold"
            android:text="@{gameViewModel.currentPlayer}"
            android:padding="@dimen/small_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tvScore"/>

        <TextView
            android:id="@+id/tvScore"
            style="@style/MediumDarkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Score: 0"
            android:text="@{`Score: `+ gameViewModel.score}"
            android:padding="@dimen/small_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:visibility="visible"
        android:id="@+id/tvCountDown"
        style="@style/XLargeDarkTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="0"
        android:text="@{``+ gameViewModel.countDown}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:visibility="invisible"
        android:id="@+id/imgDirection"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@{gameViewModel.arrow, default=@drawable/ic_back}"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tvTryAgain"
        style="@style/MediumDarkTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wrong direction, please try again"
        android:layout_marginTop="-40dp"
        app:layout_constraintTop_toBottomOf="@+id/imgDirection"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>













    <LinearLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/small_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/tvUserTitl"
            style="@style/MediumDarkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tilt device"/>

        <TextView
            android:id="@+id/tvUserTitlGegrees"
            style="@style/MediumDarkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tilt degree"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/small_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/btnLoss"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Loss"
            android:textSize="@dimen/small_text"
            android:background="@drawable/round_button_background"
            android:layout_marginLeft="@dimen/small_margin"
            android:onClick="onLossButtonClicked"/>

        <Button
            android:id="@+id/btnDefeat"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="Defeat"
            android:textSize="@dimen/small_text"
            android:background="@drawable/round_button_background"
            android:layout_marginLeft="@dimen/small_margin"
            android:onClick="onDefeatButtonClicked"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>

